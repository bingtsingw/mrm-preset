{
  "name": "@bingtsingw/mrm-preset",
  "version": "0.9.0",
  "description": "Common tasks for Mrm",
  "main": "config.json",
  "keywords": [
    "mrm",
    "mrm-task",
    "mrm-preset"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "bingtsingw",
    "url": "https://github.com/bingtsingw"
  },
  "license": "MIT",
  "dependencies": {
    "execa": "^6.1.0",
    "git-user-name": "^2.0.0",
    "mrm-core": "^7.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/eslint-parser": "^7.19.1",
    "@bingtsingw/mrm-preset": "^0.8.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@release-it/conventional-changelog": "^5.1.0",
    "@types/node": "^18.7.23",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.24.0",
    "eslint-config-alloy": "^4.7.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mrm": "^4.1.6",
    "prettier": "^2.7.1",
    "release-it": "^15.4.2"
  },
  "scripts": {
    "mrm": "mrm --preset=@bingtsingw/mrm-preset",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "prepare": "if [ -d './node_modules/husky' ]; then husky install; fi",
    "commit": "cz",
    "release": "release-it",
    "lint:js": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "lint:js:fix": "eslint . --cache --ext .js,.jsx,.ts,.tsx --fix"
  },
  "lint-staged": {
    "**/*.{js,ts,html,css,md,json}": "prettier --check",
    "**/*.{js,jsx,ts,tsx,html,css,md,json}": "prettier --check",
    "**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "never"
  },
  "eslintIgnore": [
    "dist",
    "build",
    "out"
  ],
  "eslintConfig": {
    "extends": [
      "alloy"
    ]
  }
}
